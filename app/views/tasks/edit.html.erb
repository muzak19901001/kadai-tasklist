<h2>Edit Task</h2>
<h2>id:<%= @task.id %></h2>

  <%= form_with model: @task, local: true do |f| %>
    <div class="form-inline">
      <div class="form-group">
        <label>STATUS:</label>
        <%= f.text_field :status, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>CONTENT</label>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
      
      
      <%= f.submit 'Save', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>