<% if @tasks.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>STATUS</th>
          <th>CONTENT</th>
          <th>DATE</th>
          <th>MENU</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.id %></td>
            <td><%= task.status %></td>
            <td><%= task.content %></td>
            <td><%= task.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary btn-xs' %> 
            <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "削除してよろしいですか？" }, class: 'btn btn-danger btn-xs' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= paginate @tasks %>
    </div>
<% end %>